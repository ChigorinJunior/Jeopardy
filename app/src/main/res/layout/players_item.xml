<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="80dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@android:color/darker_gray" />

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/avatarImageView"
        android:layout_width="@dimen/dimen_xxlarge"
        android:layout_height="@dimen/dimen_xxlarge"
        android:layout_marginLeft="@dimen/dimen_medium"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        app:civ_border_width="1dp"
        app:civ_border_color="#FF000000"/>

    <View
        android:id="@+id/centerHolder"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_centerVertical="true"/>

    <TextView
        android:id="@+id/playerName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/avatarImageView"
        android:layout_marginLeft="@dimen/dimen_medium"
        android:layout_above="@id/centerHolder"/>

    <TextView
        android:id="@+id/playerRating"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/avatarImageView"
        android:layout_centerVertical="true"
        android:layout_below="@id/centerHolder"
        android:layout_marginLeft="@dimen/dimen_medium"/>

    <CheckBox
        android:id="@+id/playerCheckBox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:layout_marginRight="@dimen/dimen_medium"/>
</RelativeLayout>